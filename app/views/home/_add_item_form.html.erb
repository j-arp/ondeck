<%= form_for(@item, :url=> { :controller=>"items", :action=>"create"}, :remote=>true) do |f| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title , :size=>40 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols=>30, :rows=>5 %>
  </div>

  <div class="field">
    <%= f.label :effort_level %><br />
   	<%= f.select :effort_level, options_for_select((0..10).to_a, 5) %>
  </div>

  <div class="field">
    <%= f.label :program %><br />
	<%= collection_select(:item, :program_id, Program.all, :id, :name, :prompt => 'Please select a program') %>
  </div>


    <%= f.hidden_field :status_id , :value=>3 %>

	

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
