<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :effort_level %><br />
    <%= f.number_field :effort_level %>
  </div>
  <div class="field">
    <%= f.label :bcid %><br />
    <%= f.text_field :bcid %>
  </div>

  <div class="field">
    <%= f.label :week %><br />
    <%= f.number_field :week %>
  </div>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.number_field :year %>
  </div>


  <div class="field">
    <%= f.label :status %><br />
   <%= collection_select(:item, :status_id, Status.all, :id, :name, :prompt => 'Please select a status') %>
  </div>
  <div class="field">
    <%= f.label :program %><br />
	<%= collection_select(:item, :program_id, Program.all, :id, :name, :prompt => 'Please select a program') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
